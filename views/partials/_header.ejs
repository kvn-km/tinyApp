<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">tinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div class="text-right">
      <% if (username) {%>
      <form method="POST" action="/logout" name="username" class="form-inline">
        <span class="align-middle text-white">Logged in as <strong><%= username  %></strong>
          <button type="submit" class="mx-3 btn btn-outline-light btn-sm">LOG OUT</button>
        </span>
      </form>
      <% } else { %>
      <form method="POST" action="/login" name="username" class="form-inline">
        <span class="align-middle text-white"><input id="login" class="form-control form-control-sm" type="text" name="username" placeholder="username" style="width: 150px">
          <button type="submit" class="mx-3 btn btn-primary btn-sm">SIGN IN</button></span>
      </form>
      <% } %>
    </div>
  </nav>
</header>